{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=preco_certo;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  // Com a flag setada em true, impede que mais dados sejam inseridos na tabela Produtos, desde que ela já esteja populada.
  //  Caso a tabela esteja vazia, basta trocar a flag para false.
  "AppConfiguration": {
    "OperacoesRealizadas": true
  }
}
