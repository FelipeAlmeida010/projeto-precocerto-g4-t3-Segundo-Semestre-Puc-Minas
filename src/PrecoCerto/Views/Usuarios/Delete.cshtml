@model PrecoCerto.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}
<div class="d-flex flex-column wrapper">
    <main class="flex-fill">
        <div class="container-fluid-lg">
            <div class="row">
                <h2 class="mb-3">Apagar usuário</h2>

                <h4>Tem certeza que deseja apagar esse usuário?</h4>

                <table class="table table-borderless table-hover">
                    <thead>
                        <tr>
                            <th class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Endereco)
                            </th>
                            <th class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Telefone)
                            </th>
                        <tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="col-sm-4">
                                @Html.DisplayFor(model => model.Nome)
                            </td>
                            <td class="col-sm-4">
                                @Html.DisplayFor(model => model.Email)
                            </td>
                            <td class="col-sm-4">
                                @Html.DisplayFor(model => model.Endereco)
                            </td>
                            <td class="col-sm-4">
                                @Html.DisplayFor(model => model.Telefone)
                            </td>
                        </tr>
                    </tbody>
                </table>
    
                <form class="mt-3" asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a class="btn-log-link btn-primary" asp-action="Index">Voltar</a>
                    <input type="submit" value="Apagar" class="btn-log btn-danger" />
                </form>
            </div>
        </div>
    </main>
</div>

