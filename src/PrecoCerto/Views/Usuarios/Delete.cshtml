<!------------------------------------------------------------------------------------------------------------------------------------------------>

<div class="d-flex flex-column wrapper pt-3">
    <main class="flex-fill">
        <div class="container-fluid-lg">
            <div class="row">
                <dl class="row mt-3">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Endereco)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Endereco)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Telefone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefone)
                    </dd>
                </dl>   
            </div>
            <form class="mb-3" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <a class="btn-log-link btn-primary" asp-action="Index">Voltar</a>
                <input type="submit" value="Apagar" class="btn-log btn-danger" />
            </form>
        </div>
    </main>
</div>