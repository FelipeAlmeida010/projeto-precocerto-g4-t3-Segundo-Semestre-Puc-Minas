@using PrecoCerto.Controllers;
@model CarrinhoViewModel

@{
    ViewData["Title"] = "Carrinho de Compras";
}

<!---------------------------------------------------------------- Cabeçalho ------------------------------------------------------------------>
<section class="breadscrumb-section pt-0">
    <div class="container-fluid-lg">
        <div class="row">
            <div class="col-12">
                <div class="breadscrumb-contain">
                    <h2>Carrinho</h2>
                    <nav>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                                        <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146ZM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5Z" />
                                    </svg>
                                </a>
                            </li>
                            <li aria-current="page">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-right-short icon-margin" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z" />
                                </svg>Carrinho
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

<!---------------------------------------------------------------- Carrinho ------------------------------------------------------------------->
<section class="cart-section section-b-space">
    <div class="container-fluid">
        <div class="row g-sm-5 g-3">
            <div class="col-xxl-9">
                <div class="cart-table">
                    <div class="table-responsive-xl">
                        @if (Model != null && Model.Produtos.Any())
                        {
                         <table class="table">
                              <tbody>
                                @foreach (var produto in Model.Produtos)
                                {
                                    <tr class="product-box-contain cart-item">
                                        <td class="product-detail">
                                            <div class="product border-0">
                                                <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#view-@produto.Id" class="product-image">
                                                    <img src="data:@produto.ImagemMimeType;base64,@Convert.ToBase64String(produto.Imagem)" class="img-fluid blur-up lazyload" alt="">
                                                </a>
                                                <div class="product-detail">
                                                    <ul>
                                                        <li class="name">
                                                            <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#view-@produto.Id">@produto.Nome</a>
                                                        </li>

                                                        <li class="text-content">
                                                            <span class="text-title">Marca:</span> @produto.Marca
                                                        </li>

                                                        <li class="text-content">
                                                            <span class="text-title">Vendido por:</span> @produto.Tipo
                                                        </li>

                                                        <li>
                                                            <h5 class="text-content d-inline-block">Preço :</h5>
                                                            <span>@produto.Preco.ToString("C")</span>
                                                        </li>

                                                        <li class="quantity-price-box">
                                                            <div class="cart_qty">
                                                                <div class="input-group">
                                                                    <button type="button" class="btn qty-left-minus" data-type="minus" data-field="">
                                                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-dash" viewBox="0 0 16 16">
                                                                            <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" />
                                                                        </svg>
                                                                    </button>
                                                                    <input class="form-control input-number qty-input" type="text" name="quantity" value="1">
                                                                    <button type="button" class="btn qty-right-plus" data-type="plus" data-field="">
                                                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                                                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                                                        </svg>
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </li>
                                                        <li>
                                                            <h5>Total: @produto.Preco.ToString("C")</h5>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="price">
                                            <h4 class="table-title text-content">Preço</h4>
                                            <h5>@produto.Preco.ToString("C")</h5>
                                        </td>

                                        <td class="quantity">
                                            <h4 class="table-title text-content">Quantidade</h4>
                                            <div class="quantity-price">
                                                <div class="cart_qty">
                                                    <div class="input-group">
                                                        <button type="button" class="btn qty-left-minus" data-type="minus" data-field="">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-dash" viewBox="0 0 16 16">
                                                                <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" />
                                                            </svg>
                                                        </button>
                                                        <input class="form-control input-number qty-input" type="text" name="quantity" value="1">
                                                        <button type="button" class="btn qty-right-plus" data-type="plus" data-field="">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                                            </svg>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="subtotal">
                                            <h4 class="table-title text-content">Total</h4>
                                            <h5>@produto.Preco.ToString("C")</h5>
                                        </td>

                                        <td class="save-remove">
                                            <h4 class="table-title text-content">Excluir</h4>
                                            <a asp-controller="CarrinhoDeCompras" asp-action="RemoverDoCarrinho" asp-route-id="@produto.Id" class="remove close_button">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                                                </svg>
                                            </a>
                                        </td>
                                    </tr>
                                }
                              </tbody>  
                        </table>
                        }
                        else
                        {
                            <h5 class="log-in-title">Seu carrinho de compras está vazio.</h5>
                        }
                    </div>
                </div>
            </div>
            <div class="col-xxl-3">
                <div class="summery-box p-sticky">
                    <div class="summery-header">
                        <h3>
                            Total do carrinho
                        </h3>
                    </div>

                    <div class="summery-contain">
                        <div class="coupon-cart">
                            <h6 class="text-content mb-2">
                                Aplicar cupom
                            </h6>
                            <div class="mb-3 coupon-box input-group">
                                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Insira o código do cupom">
                                <button class="btn-apply">Aplicar</button>
                            </div>
                        </div>
                        <ul>
                            <li>
                                <h4>Subtotal</h4>
                                <h4 class="price">@Model.ValorTotal.ToString("C")</h4>
                            </li>

                            <li>
                                <h4>Desconto</h4>
                                <h4 class="price">R$0,00</h4>
                            </li>
                            
                        </ul>
                    </div>

                    <ul class="summery-total">
                        <li class="list-total border-top-0">
                            <h4>Total</h4>
                            <h4 class="price theme-color">@Model.ValorTotal.ToString("C")</h4>
                        </li>
                    </ul>
                    <div class="button-group cart-button">
                        <ul>
                            <li>
                                <a asp-area="" asp-controller="CarrinhoDeCompras" asp-action="Confirmacao" class="btn btn-animation proceed-btn fw-bold">
                                    Finalizar compra
                                </a>
                            </li>

                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-animation-2 proceed-btn fw-bold">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z" />
                                    </svg>
                                    Continuar comprando
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!---------------------------------------------------------------- Modal ---------------------------------------------------------------------->
