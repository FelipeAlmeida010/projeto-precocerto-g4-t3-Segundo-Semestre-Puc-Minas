                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!------------------------------------------------------------------------------------------------------------------------------------------------>

<div class="d-flex flex-column wrapper">
    <main class="flex-fill">
        <div class="container-fluid-lg">
            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-8 col-lg-6">
                    <form class="mt-3" asp-action="Create">
                        <h2 class="mb-3">Informe o Produto</h2>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Setor" class="control-label"></label>
                            <input asp-for="Setor" class="form-control" />
                            <span asp-validation-for="Setor" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Marca" class="control-label"></label>
                            <input asp-for="Marca" class="form-control" />
                            <span asp-validation-for="Marca" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Quantidade" class="control-label"></label>
                            <input asp-for="Quantidade" class="form-control" />
                            <span asp-validation-for="Quantidade" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
                            </label>
                        </div>
                        <div class="form-group form-check mb-4">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="EmOferta" /> @Html.DisplayNameFor(model => model.EmOferta)
                            </label>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Preco" class="control-label"></label>
                            <input asp-for="Preco" class="form-control" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Descricao" class="control-label"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Validade" class="control-label"></label>
                            <input asp-for="Validade" class="form-control" />
                            <span asp-validation-for="Validade" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Tipo" class="control-label"></label>
                            <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoSupermercado>()"></select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <a class="btn-log-link btn-primary" asp-action="Index">Voltar</a>
                            <input type="submit" value="Cadastrar produto" class="btn-log btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
