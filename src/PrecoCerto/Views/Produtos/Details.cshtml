                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!------------------------------------------------------------------------------------------------------------------------------------------------>

<div class="d-flex flex-column wrapper pt-3">
    <main class="flex-fill">
        <div class="container-fluid-lg">
            <div class="row">
                <dl class="row mt-3">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Setor)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Setor)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Marca)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Marca)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Quantidade)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.EmEstoque)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.EmEstoque)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.EmOferta)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.EmOferta)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Preco)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Preco)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Validade)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Validade)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Tipo)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Tipo)
                    </dd>
                </dl>
            </div>
            <div class="mt-3 mb-3">
                <a class="btn-log-link btn-primary" asp-action="Index">Voltar</a>
                <a class="btn-log-link btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
            </div>
        </div>
    </main>
</div>